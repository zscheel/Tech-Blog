<form class="new-post-form">
    <div>
        <label for="post-title">Title</label>
        <input type="text" id="pot-title" name="post-title" />
    </div>
    <div>
        <label for="post-text">Text</label>
        <input type="text" id="post-text" name="post-text" />
    </div>
    <button type="submit">Post</button>
</form>

<ol>
    {{#each posts as |post|}}
    <li>
        {{> post-info post}}
        <a href="/dashboard/edit/{{id}}">Edit</a>
    </li>
    {{/each}}
</ol>

<script src="/javascript/add-post.js"></script>